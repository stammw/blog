{{#> layout title="Create a new post"}}
{{#*inline "body-block"}}
{{{ post.body }}}

<div>
    <h2>Comments</h2>
    {{#each comments}}
        <p>Comment by {{ user }}</p>
        <p>{{ body }}</p>
    {{/each}}
</div>

<form method="POST" id="edit_comment" >
    <div class="form-group">
        <textarea id="edit_comment_body" name="body" rows="10" cols="100" value=""></textarea>
    </div>
    <div class="form-group">
        <input type="hidden" id="userId" name="user_id"
               value="{{ user  }}" />
        <input type="submit" value="Comment"/>
    </div>
</form>
{{/inline}}
{{/layout}}
