{{#> layout title="Create a new post"}}
{{#*inline "body-block"}}
<form method="POST" id="edit_post"
      {{#if post.id}} action="/post/{{ post.id }}"
      {{else}}        action="/post/new"
      {{/if}}
>
    <div class="form-group">
        <input type="text" name="title" value="{{ post.title }}" />
    </div>
    <div class="form-group">
        <textarea id="edit_post" name="body" rows="10" cols="100" value="">{{ post.body }}</textarea>
    </div>
    <div class="form-group">
        <input type="hidden" id="published" name="published"
               value="{{#if post.published}}true{{else}}false{{/if}}" />
        {{#if post.published}}
        <input type="submit" value="Update" />
        {{else}}
        <input type="submit" value="Save Draft"/>
        <input type="submit" value="Publish" onclick="return publish(this);" />
        {{/if}}
    </div>
</form>
{{/inline}}
{{/layout}}
